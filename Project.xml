<?xml version="1.0" encoding="UTF-8"?>
<buildster directory="../build" distribution="../Distribution">
  <project directory="../Project">
    <dependencies>
      <dependency>
        <label>zlib</label>
        <subpath>build</subpath>
        <remote>
          <url>https://github.com/PierceLBrooks/zlib.git</url>
          <git_repo>
            <branch>master</branch>
            <credentials>
              <username>username</username>
              <password>password</password>
            </credentials>
          </git_repo>
        </remote>
        <build>
          <arguments>
            <argument>-DPNG_TESTS=OFF</argument>
            <argument>-DPNG_EXECUTABLES=OFF</argument>
            <argument>-DPNG_STATIC=OFF</argument>
          </arguments>
          <cmake>
            <generator>
              <switch id="BUILDSTER_OS">
                <case check="Windows">MinGW Makefiles</case>
                <case check="Linux">Unix Makefiles</case>
                <case check="Darwin">Unix Makefiles</case>
                <default><quit></quit></default>
              </switch>
            </generator>
            <source>..</source>
          </cmake>
        </build>
        <exports>
          <export type="headers" except="fheroes2">
            <key>ZLIB_INCLUDE_DIRS</key>
            <value><install></install>/include</value>
          </export>
          <export type="libraries" except="fheroes2">
            <key>ZLIB_LIBRARIES</key>
            <value><install></install>/bin/libzlib.dll</value>
          </export>
          <export type="all">
            <key>ZLIB_ROOT</key>
            <value><install></install></value>
          </export>
        </exports>
        <imports>
          <import>zlib</import>
        </imports>
      </dependency>
      <dependency>
        <label>libpng</label>
        <subpath>build</subpath>
        <remote>
          <url>https://github.com/PierceLBrooks/libpng.git</url>
          <git_repo>
            <branch>libpng16</branch>
            <credentials>
              <username>username</username>
              <password>password</password>
            </credentials>
          </git_repo>
        </remote>
        <build>
          <arguments>
            <argument>-DPNG_TESTS=OFF</argument>
            <argument>-DPNG_EXECUTABLES=OFF</argument>
            <argument>-DPNG_STATIC=OFF</argument>
            <argument>-DPNG_BUILD_ZLIB=ON</argument>
          </arguments>
          <cmake>
            <generator>
              <switch id="BUILDSTER_OS">
                <case check="Windows">MinGW Makefiles</case>
                <case check="Linux">Unix Makefiles</case>
                <case check="Darwin">Unix Makefiles</case>
                <default><quit></quit></default>
              </switch>
            </generator>
            <source>..</source>
          </cmake>
        </build>
        <exports>
          <export type="headers">
            <key>PNG_PNG_INCLUDE_DIR</key>
            <value><install></install>/include</value>
          </export>
          <export type="libraries">
            <key>PNG_LIBRARY</key>
            <value><install></install>/bin/libpng16d.dll</value>
          </export>
        </exports>
        <imports>
          <import>zlib</import>
        </imports>
      </dependency>
      <dependency>
        <label>sdlmixer2</label>
        <subpath>build</subpath>
        <remote>
          <url>
            <switch id="BUILDSTER_OS">
              <case check="Windows">https://www.libsdl.org/projects/SDL_mixer/release/SDL2_mixer-devel-2.0.4-mingw.tar.gz</case>
              <default><quit></quit></default>
            </switch>
          </url>
          <wget>sdlmixer2.tar.gz</wget>
        </remote>
        <build>
          <arguments></arguments>
          <shells>
            <shell>
              <work><origin></origin></work>
              <commands>
                <command><extract><origin></origin>/sdlmixer2.tar.gz</extract></command>
              </commands>
            </shell>
          </shells>
        </build>
        <exports>
          <export type="headers">
            <key>SDL2_MIXER_INCLUDE_DIR</key>
            <value><origin></origin>/sdlmixer2/SDL2_mixer-2.0.4/i686-w64-mingw32/include/SDL2</value>
          </export>
          <export type="libraries">
            <key>SDL2_MIXER_LIBRARY</key>
            <value><origin></origin>/sdlmixer2/SDL2_mixer-2.0.4/i686-w64-mingw32/bin/SDL2_mixer.dll</value>
          </export>
        </exports>
        <imports></imports>
      </dependency>
      <dependency>
        <label>sdlimage2</label>
        <subpath>build</subpath>
        <remote>
          <url>
            <switch id="BUILDSTER_OS">
              <case check="Windows">https://www.libsdl.org/projects/SDL_image/release/SDL2_image-devel-2.0.5-mingw.tar.gz</case>
              <default><quit></quit></default>
            </switch>
          </url>
          <wget>sdlimage2.tar.gz</wget>
        </remote>
        <build>
          <arguments></arguments>
          <shells>
            <shell>
              <work><origin></origin></work>
              <commands>
                <command><extract><origin></origin>/sdlimage2.tar.gz</extract></command>
              </commands>
            </shell>
          </shells>
        </build>
        <exports>
          <export type="headers">
            <key>SDL2_IMAGE_INCLUDE_DIR</key>
            <value><origin></origin>/sdlimage2/SDL2_image-2.0.5/i686-w64-mingw32/include/SDL2</value>
          </export>
          <export type="libraries">
            <key>SDL2_IMAGE_LIBRARY</key>
            <value><origin></origin>/sdlimage2/SDL2_image-2.0.5/i686-w64-mingw32/bin/SDL2_image.dll</value>
          </export>
        </exports>
        <imports></imports>
      </dependency>
      <dependency>
        <label>sdl2</label>
        <subpath>build</subpath>
        <remote>
          <url>
            <switch id="BUILDSTER_OS">
              <case check="Windows">https://www.libsdl.org/release/SDL2-devel-2.0.12-mingw.tar.gz</case>
              <default><quit></quit></default>
            </switch>
          </url>
          <wget>sdl2.tar.gz</wget>
        </remote>
        <build>
          <arguments></arguments>
          <shells>
            <shell>
              <work><origin></origin></work>
              <commands>
                <command><extract><origin></origin>/sdl2.tar.gz</extract></command>
              </commands>
            </shell>
          </shells>
        </build>
        <exports>
          <export type="headers">
            <key>SDL2_INCLUDE_DIR</key>
            <value><origin></origin>/sdl2/SDL2-2.0.12/i686-w64-mingw32/include/SDL2</value>
          </export>
          <export type="libraries">
            <key>SDL2_LIBRARY</key>
            <value><origin></origin>/sdl2/SDL2-2.0.12/i686-w64-mingw32/bin/SDL2.dll</value>
          </export>
          <export type="libraries">
            <key>SDL2MAIN_LIBRARY</key>
            <value><origin></origin>/sdl2/SDL2-2.0.12/i686-w64-mingw32/lib/libSDL2main.a</value>
          </export>
        </exports>
        <imports></imports>
      </dependency>
    </dependencies>
    <targets>
      <target type="executable">
        <label>fheroes2</label>
        <generator>
          <switch id="BUILDSTER_OS">
            <case check="Windows">CodeBlocks - MinGW Makefiles</case>
            <case check="Linux">CodeBlocks - Unix Makefiles</case>
            <case check="Darwin">CodeBlocks - Unix Makefiles</case>
            <default><quit></quit></default>
          </switch>
        </generator>
        <arguments>
          <argument>-DUSE_SDL_VERSION=SDL2</argument>
          <argument>-DENABLE_IMAGE=ON</argument>
          <argument>-DENABLE_MIXER=ON</argument>
        </arguments>
        <definitions></definitions>
        <links>
          <if_check id="BUILDSTER_OS" check="Windows">
            <link>setupapi</link>
            <link>iphlpapi</link>
            <link>psapi</link>
            <link>userenv</link>
            <link>gdi32</link>
            <link>crypt32</link>
            <link>ws2_32</link>
          </if_check>
        </links>
        <imports>
          <import>zlib</import>
          <import>libpng</import>
          <import>sdlmixer2</import>
          <import>sdlimage2</import>
          <import>sdl2</import>
        </imports>
      </target>
    </targets>
  </project>
</buildster>
